{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "ignoreChanges": ["**/*.md", "**/*.test.*"]
    },
    "publish": {
      "ignoreChanges": ["**/*.md", "**/*.test.*"],
      "conventionalCommits": true,
      "message": "chore: publish",
      "allowBranch": "main"
    }
  }
}
