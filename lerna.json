{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": false,
  "packages": ["packages/*", "website"],
  "command": {
    "version": {
      "ignoreChanges": ["**/*.md", "**/*.test.*", "e2e/**"]
    },
    "publish": {
      "ignoreChanges": ["**/*.md", "**/*.test.*", "e2e/**"],
      "conventionalCommits": true,
      "message": "chore: publish",
      "allowBranch": "main"
    }
  }
}
