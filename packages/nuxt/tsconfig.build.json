{
  "extends": "../../tsconfig.json",
  "include": ["./src"],
  "exclude": [
    "**/test",
    "*.js",
    "**/__tests__/",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/dist/**/*"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  }
}
